<p style="color: green"><%= notice %></p>

<h1 class="text-5xl bg-emerald-200 text-teal-900 text-center font-mono font-extrabold underline hover:decoration-wavy">Microposts</h1>

<div id="microposts" class="grid grid-cols-3 m-3">
  <% @microposts.each do |micropost| %>
    <%= link_to micropost, class: "cursor-pointer underline hover:decoration-wavy" do %>
      <div class="border-2 p-3 m-3 shadow-lg hover:border-black bg-emerald-50 rounded-lg">
        <%= render micropost %>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "New micropost", new_micropost_path, class: "bg-red-400 p-3 hover:bg-red-300 rounded-lg" %>
